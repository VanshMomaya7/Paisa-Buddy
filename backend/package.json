{
  "name": "virtual-portfolio-backend",
  "version": "2.0.0",
  "description": "Complete backend API for Virtual Portfolio Simulator with real-time Indian stock market data from NSE/BSE",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --ignore 'logs/' --ignore 'public/'",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'No build step required for backend'",
    "pm2:start": "pm2 start server.js --name virtual-portfolio-api",
    "pm2:stop": "pm2 stop virtual-portfolio-api",
    "pm2:restart": "pm2 restart virtual-portfolio-api",
    "logs": "tail -f logs/app.log"
  },
  "keywords": [
    "stocks",
    "portfolio",
    "indian-markets",
    "nse",
    "bse",
    "real-time-data",
    "financial-api",
    "investment-simulator",
    "nodejs",
    "express"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/virtual-portfolio-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/virtual-portfolio-backend/issues"
  },
  "homepage": "https://github.com/yourusername/virtual-portfolio-backend#readme",
  "dependencies": {
    "axios": "^1.12.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.1",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "pm2": "^5.4.3",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/",
      "logs/",
      "*.log"
    ],
    "ext": "js,json,env",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ]
  }
}
